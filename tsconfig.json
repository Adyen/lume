{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["dom", "es5", "es2015"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "paths": {
      "@/*": ["./src/*"]
    },
    "sourceMap": true,
    "target": "esnext",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "docs",
    "test",
    "src/**/*.stories.ts",
    "src/**/*.spec.ts",
    "src/next"
  ]
}
